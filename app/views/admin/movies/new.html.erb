<h1 class="text-4xl text-center my-6">新しい映画を登録</h1>
<div class="text-center">
  <% if flash[:alert] %>
    <p style="color: red;"><%= flash[:alert] %></p>
  <% end %>
  <%= form_with model: @movie, url: admin_movies_path, local: true, html: {class: "space-y-8"} do |f| %>
    <div class="flex justify-center items-center space-x-2">
      <%= f.label :name, "タイトル" %><br>
      <%= f.text_field :name, placeholder: "名探偵コナン"%>
    </div>
    <div class="flex justify-center items-center space-x-2">
      <%= f.label :year, "公開年", placeholder: "2025" %> <br>
      <%= f.text_field :year %>
    </div>
    <div class="flex justify-center items-center space-x-2">
      <%= f.label :description, "概要", placeholder: "" %> <br>
      <%= f.text_area :description %>
    </div>
    <div class="flex justify-center items-center space-x-2">
      <%= f.label :image_url, "画像URL" %> <br>
      <%= f.text_field :image_url %>
    </div>
    <div class="flex justify-center items-center space-x-2">
      <%= f.label :is_showing, "上映中" %> <br>
      <%= f.check_box :is_showing %>
    </div>
    <div>
      <%= f.submit "登録" %>
    </div>
  <% end %>
</div>
