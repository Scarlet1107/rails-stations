<h1 class="text-4xl text-center my-6">登録済みの映画を編集</h1>
<div class="text-center">
  <% if flash[:alert] %>
    <p style="color: red;"><%= flash[:alert] %></p>
  <% end %>
  <%= form_with model: @movie, url: admin_movie_path(@movie), local: true, method: :patch, html: {class: "space-y-8"} do |f| %>
    <div class="flex justify-center items-center space-x-2">
      <%= f.label :name, "タイトル" %><br>
      <%= f.text_field :name %>
    </div>
    <div class="flex justify-center items-center space-x-2">
      <%= f.label :year, "公開年" %> <br>
      <%= f.text_field :year %>
    </div>
    <div class="flex justify-center items-center space-x-2">
      <%= f.label :description, "概要", placeholder: "" %> <br>
      <%= f.text_area :description %>
    </div>
    <div class="flex justify-center items-center space-x-2">
      <%= f.label :image_url, "画像URL" %> <br>
      <%= f.text_field :image_url %>
    </div>
    <div class="flex justify-center items-center space-x-2">
      <%= f.label :is_showing, "上映中" %> <br>
      <%= f.check_box :is_showing %>
    </div>
    <div class="flex justify-center space-x-4">
      <%= button_to "削除", admin_movie_path(@movie), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600" %>
      <%= f.submit "登録" %>
    </div>
  <% end %>
</div>
